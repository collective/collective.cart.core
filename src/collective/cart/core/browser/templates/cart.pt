<html
  i18n:domain="collective.cart.core"
  lang="en"
  metal:use-macro="here/main_template/macros/master"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
  <body>
    <metal:title fill-slot="content-title">
      <h1 class="documentFirstHeading" i18n:translate="">Cart</h1>
    </metal:title>
    <metal:description fill-slot="content-description">

    </metal:description>
    <metal:text fill-slot="content-core">
      <p id="cart-is-empty"
        i18n:translate=""
        tal:condition="not: view/cart_articles">
        Cart is empty.
      </p>
      <div
        tal:condition="view/cart_articles"
        tal:replace="structure provider:collective.cart.core.viewlet-manager.cart" />
    </metal:text>
  </body>
</html>
