<section
  i18n:domain="collective.cart.core"
  tal:condition="view/articles">
  <table class="listing">
    <thead>
      <tr>
        <th i18n:translate="">
          Name
        </th>
        <th i18n:translate="">
          Remove
        </th>
      </tr>
    </thead>
    <tbody>
      <form
        method="post"
        tal:attributes="action context/plone_context_state/current_base_url"
        tal:repeat="item view/articles">
        <span tal:replace="structure context/@@authenticator/authenticator" />
        <tr
          tal:define="oddrow repeat/item/odd"
          tal:attributes="class python:oddrow and 'even' or 'odd'">
          <td class="name">
            <a
              tal:condition="item/url"
              tal:attributes="href item/url"
              tal:content="item/title"
              />
            <span
              tal:condition="not: item/url"
              tal:replace="item/title"
              />
          </td>
          <td class="remove">
            <button
              class="standalone"
              i18n:translate=""
              name="form.buttons.RemoveArticle"
              type="submit"
              tal:attributes="value item/id"
              value="form.buttons.RemoveArticle">
              Remove
            </button>
          </td>
        </tr>
      </form>
    </tbody>
  </table>
</section>
